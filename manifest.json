{
  "manifest_version": 3,
  "name": "laziest browser",
  "version": "1.2.0",
  "description": "Prefix router with drag reorder and optional AI / Browser / Web3 preset packs.",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
